---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>

<h1>text</h1>

<p class="focusabletext" tabindex="0" autofocus>Try focusing these text fields using <kbd>Tab</kbd> key or clicking on it.</p>

<div class="switcher mt-3">
	<div class="stack">
		<h2>default</h2>
		<p class="ui no-style" tabindex="0">Hello, world.</p>
	</div>
	<div class="stack">
		<h2>:focus</h2>
		<p class="ui focus" tabindex="0">Hello, world.</p>
	</div>
	<div class="stack">
		<h2>:focus-visible</h2>
		<p class="ui focus-visible" tabindex="0">Hello, world.</p>
	</div>
</div>

</BaseLayout>
