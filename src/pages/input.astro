---
import BaseLayout from "../layouts/BaseLayout.astro";
import IntroMessage from "../components/IntroMessage.astro";
---

<BaseLayout>

<h1>input</h1>

<IntroMessage></IntroMessage>

<div class="switcher mt-3">
	<div class="stack">
		<h2>デフォルト</h2>
		<input size="10" class="ui no-style">
	</div>
	<div class="stack">
		<h2>:focus</h2>
		<input size="10" class="ui focus">
	</div>
	<div class="stack">
		<h2>:focus-visible</h2>
		<input size="10" class="ui focus-visible">
	</div>
</div>

</BaseLayout>
