---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>

<h1>select</h1>

<p class="focusabletext" tabindex="0" autofocus>Try focusing these text fields using <kbd>Tab</kbd> key or clicking on it.</p>

<div class="switcher mt-3">
	<div class="stack">
		<h2>default</h2>
		<select class="ui no-style">
      <option>one</option>
      <option>two</option>
      <option>three</option>
    </select>
	</div>
	<div class="stack">
		<h2>:focus</h2>
		<select class="ui focus">
      <option>one</option>
      <option>two</option>
      <option>three</option>
    </select>
	</div>
	<div class="stack">
		<h2>:focus-visible</h2>
		<select class="ui focus-visible">
      <option>one</option>
      <option>two</option>
      <option>three</option>
    </select>
	</div>
</div>

</BaseLayout>
