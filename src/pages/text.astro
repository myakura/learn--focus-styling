---
import BaseLayout from "../layouts/BaseLayout.astro";
import IntroMessage from "../components/IntroMessage.astro";
---

<BaseLayout>

<h1>text</h1>

<IntroMessage></IntroMessage>

<div class="switcher mt-3">
	<div class="stack">
		<h2>デフォルト</h2>
		<p class="ui no-style" tabindex="0">Hello, world.</p>
	</div>
	<div class="stack">
		<h2>:focus</h2>
		<p class="ui focus" tabindex="0">Hello, world.</p>
	</div>
	<div class="stack">
		<h2>:focus-visible</h2>
		<p class="ui focus-visible" tabindex="0">Hello, world.</p>
	</div>
</div>

</BaseLayout>
