---
import BaseLayout from "../layouts/BaseLayout.astro";
import IntroMessage from "../components/IntroMessage.astro";
const pageName = "button";
---

<BaseLayout pageName={pageName}>

<h1>{pageName}</h1>

<IntroMessage></IntroMessage>

<div class="switcher mt-3">
	<div class="stack">
		<h2>デフォルト</h2>
		<button type="button" class="ui no-style">click me</button>
	</div>
	<div class="stack">
		<h2>:focus</h2>
		<button type="button" class="ui focus">click me</button>
	</div>
	<div class="stack">
		<h2>:focus-visible</h2>
		<button type="button" class="ui focus-visible">click me</button>
	</div>
</div>

</BaseLayout>
